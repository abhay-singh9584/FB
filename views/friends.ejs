<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">

    <title>Hello, world!</title>
  </head>
  <body>
    <style>
      #cf{
        padding: 15px 40px;
      }

      @media(max-width: 500px){
        #cf{
          display: flex;
          padding: 5px 5px;
          flex-direction: column;
          flex-wrap: nowrap;
          align-content: center;
        }
        textarea{
          height: 80px;
          width: 250px;
        }
        #block{
          font-size: 12px;
        }
        .navbar-brand{
          font-size: 20px;
        }
        #jk{
            flex-direction: column;
        }
      }
    </style>
    <nav class="navbar navbar-dark bg-primary" >
      <div class="container-fluid d-flex" id="cf">
        <a class="navbar-brand" href="/profile" style="font-family: ogg; font-weight: 800; font-size: 28px;">CHEAP</a>
        <div class="block" id="block">
          <a href="/user" style="color: white; margin-right: 50px; text-decoration: none;"><%=b.name%></a>
          <a style="text-decoration: none; margin-right: 30px" href='/recived' type="button" class="btn btn-primary position-relative">
            Share
            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
              <%=b.share.length%>
              <span class="visually-hidden">unread messages</span>
            </span>
          </a>
          <a href="/logout" style="color: white; text-decoration: none;">LogOut</a>
        </div>
      </div>
    </nav>
    <div id="jk" style="display: flex;">
        <div class="container mt-3">
            <div class="card" style="width: 18rem;">
                <div class="card-header">
                My Friends
                </div>
                <ul class="list-group list-group-flush">
                <%if(b.friends.length>0){%>
                    
                    <%b.friends.forEach(function(i,index){%>
                        <li class="list-group-item"><%=i%></li>
                        <a href="/remove/<%=index%>">Remove as friends</a>
                    <%})%>
                <%}else{%>
                    <li class="list-group-item">No Item Found</li>
                <%}%>
                </ul>
            </div>
        </div>

        <div class="container mt-3">
            <div class="card" style="width: 18rem;">
                <div class="card-header">
                Suggestions
                </div>
                <ul class="list-group list-group-flush d-flex">
                <%if(user.length>0){%>
                    <%user.forEach(function(j,index){%>
                        <%if(b.name!=j.name && b.friends.indexOf(j.name)==-1){%>
                            <li class="list-group-item mt-2"><%=j.name%></li>
                            <div class="btn-group" role="group" aria-label="Basic checkbox toggle button group">
                                <input type="checkbox" class="btn-check" id="btncheck+<%=index+1%>" autocomplete="off">
                                <a style="text-decoration: none;" href="/add/<%=j._id%>">Add As Friend</a>
                            </div>
                        <%}%>
                    <%})%>
                <%}else{%>
                    <li class="list-group-item">No Item Found</li>
                <%}%>
                </ul>
            </div>
        </div>

    </div>
    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    

  </body>
</html>