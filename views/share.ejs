<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">

    <title>Hello, world!</title>
  </head>
  <body>
    <style>
      #cf{
        padding: 15px 40px;
      }

      @media(max-width: 500px){
        #cf{
          display: flex;
          padding: 5px 5px;
          flex-direction: column;
          flex-wrap: nowrap;
          align-content: center;
        }
        textarea{
          height: 80px;
          width: 250px;
        }
        #block{
          font-size: 12px;
        }
        .navbar-brand{
          font-size: 20px;
        }
      }
    </style>
    <nav class="navbar navbar-dark bg-primary" >
      <div class="container-fluid d-flex" id="cf">
        <a class="navbar-brand" href="/profile" style="font-family: ogg; font-weight: 800; font-size: 28px;">CHEAP</a>
        <div class="block" id="block">
          <a href="/user" style="color: white; margin-right: 50px; text-decoration: none;"><%=b.name%></a>
          <a style="text-decoration: none; margin-right: 30px" href='/recived' type="button" class="btn btn-primary position-relative">
            Share
            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
              <%=b.share.length%>
              <span class="visually-hidden">unread messages</span>
            </span>
          </a>
          <a href="/logout" style="color: white; text-decoration: none;">LogOut</a>
        </div>
      </div>
    </nav>
    
    

    
    <!-- <h1 style="font-family: product sans; margin-top: 20px; margin-left: 20px;">UserName</h1> -->
    
    <% if(b.share.length>0){ %>
        <% b.share.forEach(function(i,index){ %>
          <div style="display: flex; flex-direction: column;">
            <div class="container d-flex" >
              <div class="card" style="width: 30rem; margin-top: 30px; display: flex;">
                  <div class="card-body">
                    <div style="display: flex; justify-content: space-around; align-items: center;">
                      <img style="width: 50px; height: 50px;  border-radius: 50%;margin-top: 10px;" src="../images/upload/<%=i[2][i[2].length-1]%>"  >
                      <h5 style="margin-left: -30px;" class="card-title mt-4"><%=i[1]%></h5>
                      <%x=i[0].time.toString().slice(4,21)%>
                      <h6 class="card-title mt-4"><%=x%></h6>
                    </div>

                    <a  href="/delshare/<%=index%>"><button style="text-align: center;" type="button" class="btn btn-outline-danger mt-4">Delete</button></a>

                    <h4 style="text-align: center; margin: 50px;"><%=i[0].dis%></h4>
                    <div style="display: flex; align-items: center; justify-content: space-around;">
                      <a  href=<%=`/like/${i[0]._id}`%> class="btn btn-primary">Like | <%=i[0].like.length%></a>
                      <form action="/comment/<%=i[0]._id%>" method="post">
                        <input type="text" name="comment" placeholder="write your comment">
                        <button type="submit"><i class="ri-send-plane-2-line"></i></button>
                      </form>
                      
                    </div>
                    <h5 style="text-align: center; margin-top: 20px;">Comments</h5>
                    <% i[0].comment.forEach(function(j){ %>
                      <hr>
                      <p style="text-align: center;"><span style="font-weight: 700; margin-right: 20px;"><%=j[1]%>: </span><%=j[0]%></p>
                    <% }) %>
              </div>
            </div>
          </div>
        <% }) %>
    <% }else{ %>
        <h1 style="margin-left: 40%; margin-top: 10px;">No Post Found</h1>
    <% } %>
    <br>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>


  </body>
</html>